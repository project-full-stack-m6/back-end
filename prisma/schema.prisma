generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  phone String
  register_date String
  is_staff Boolean
  wallet_id Int

  wallet Wallet @relation("ContactsOnWallet",fields: [wallet_id], references: [id])
  wallet_owner Wallet? @relation("UserOnWallet")
  
  @@map("users")
}

model Wallet {
  id Int @id @default(autoincrement())
  user_id Int @unique

  contacts User[] @relation("ContactsOnWallet")
  user User @relation("UserOnWallet",fields: [user_id], references: [id])

  
  @@map("Wallets")
}
